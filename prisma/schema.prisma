generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Wisata {
  id          Int   @id @default(autoincrement())
  nama        String
  slug        String @unique
  deskripsi   String
  fasilitas   String
  harga       Float
  lokasi      String
  foto        String
  views       Int @default(0)
  createdAt   DateTime @default(now())
}